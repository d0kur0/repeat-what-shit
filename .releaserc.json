{
  "branches": ["master"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "build/bin/repeat-what-shit-amd64-installer.exe",
            "label": "repeat-what-shit.exe (NSIS Installer)"
          },
          {
            "path": "build/bin/repeat-what-shit.exe",
            "label": "repeat-what-shit.exe (Portable)"
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "go install github.com/go-task/task/v3/cmd/task@latest && task build:windows:prod:amd64 VERSION=${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
